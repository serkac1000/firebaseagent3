modules = ["nodejs-20", "web", "nix"]
run = "npm run dev"

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "npm start"]
build = ["sh", "-c", "npm run build"]

[workflows]
runButton = "Development"

[[workflows.workflow]]
name = "Development"
author = 42845952
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "Build Windows EXE"
author = 42845952
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m pip install pyinstaller"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pyinstaller --onefile --windowed main.py"

[[ports]]
localPort = 9002
externalPort = 80
